model Vote {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  vote         Boolean // true for aye, false for nay
  Legislator   Legislator @relation(fields: [legislatorId], references: [id])
  legislatorId String     @db.ObjectId
  Bill         Bill       @relation(fields: [billId], references: [id])
  billId       String     @db.ObjectId
}

model Legislator {
  id    String     @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  type  MemberType
  party Party
  votes Vote[]
}

model Bill {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  measure   String
  subject   String
  status    String
  author    String
  sourceUrl String
  fullText  String
  summary   String?
  votes     Vote[]
}
