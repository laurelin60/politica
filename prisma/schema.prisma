datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum MemberType {
  Senate
  Assembly
}

enum Party {
  Democrat
  Republican
}

