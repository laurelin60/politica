// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum LegislatorType {
  Senate
  Assembly
}

enum Party {
  Democrat
  Republican
}

enum VoteType {
  Aye
  Nay
  Nvr
}

enum Tag {
  Budget
  Education
  Health
  Environment
  Transportation
  Housing
  PublicSafety
  CivilRights
  Labor
  Business
  Agriculture
  Energy
  Technology
  LGBTQIA
}

model WeightedTag {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  tag          Tag
  weight       Int
  Legislator   Legislator @relation(fields: [legislatorId], references: [id])
  legislatorId String     @db.ObjectId

  @@unique([legislatorId, tag])
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
}

model Vote {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  vote         VoteType
  legislator   Legislator @relation(fields: [legislatorId], references: [id])
  legislatorId String     @db.ObjectId
  bill         Bill       @relation(fields: [billId], references: [id])
  billId       String     @db.ObjectId

  @@unique([legislatorId, billId])
}

model Legislator {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  name       String         @unique
  type       LegislatorType
  pictureUrl String
  party      Party
  district   Int
  votes      Vote[]
  bills      Bill[]
  tags       WeightedTag[]
}

model Bill {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  billId   String      @unique
  date     DateTime
  measure  String
  subject  String
  status   String
  fullText String
  summary  String?
  tags     Tag[]       @default([])
  author   Legislator? @relation(fields: [authorId], references: [id])
  authorId String?     @db.ObjectId
  votes    Vote[]
}
