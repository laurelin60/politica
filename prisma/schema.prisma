// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum LegislatorType {
  Senate
  Assembly
}

enum Party {
  Democrat
  Republican
}

enum VoteType {
  Aye
  Nay
  Nvr
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
}

model Vote {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  vote         VoteType
  Legislator   Legislator @relation(fields: [legislatorId], references: [id])
  legislatorId String     @db.ObjectId
  Bill         Bill       @relation(fields: [billId], references: [id])
  billId       String     @db.ObjectId
}

model Legislator {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  type       LegislatorType
  pictureUrl String
  party      Party
  district   Int
  votes      Vote[]
  bills      Bill[]

  @@unique([name, type, district])
}

model Bill {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  billId   String     @unique
  measure  String
  subject  String
  status   String
  fullText String
  summary  String?
  author   Legislator @relation(fields: [authorId], references: [id])
  authorId String     @db.ObjectId
  votes    Vote[]
}
